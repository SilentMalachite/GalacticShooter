{
  "name": "galactic-shooter",
  "version": "1.0.0",
  "type": "module",
  "main": "electron-main.js",
  "license": "MIT",
  "scripts": {
    "dev": "tsx server/index.ts",
    "build": "vite build && esbuild server/index.ts --platform=node --packages=external --bundle --format=esm --outdir=dist",
    "start": "NODE_ENV=production node dist/index.js",
    "check": "tsc",
    "db:push": "drizzle-kit push",
    "electron": "electron electron-main.js",
    "electron:dev": "NODE_ENV=development electron electron-main.js",
    "electron:setup": "node electron-setup.js",
    "electron:build": "electron-builder --publish=never",
    "lint": "eslint . --ext .ts,.tsx,.js,.cjs,.mjs",
    "format": "prettier --write ."
  },
  "dependencies": {
    "express": "^4.21.2",
    "express-rate-limit": "^7.4.0",
    "morgan": "^1.10.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@replit/vite-plugin-runtime-error-modal": "^0.0.3",
    "@tailwindcss/typography": "^0.5.15",
    "@types/express": "4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^24.7.2",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10.4.20",
    "drizzle-kit": "^0.31.5",
    "drizzle-orm": "^0.39.1",
    "drizzle-zod": "^0.7.0",
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12",
    "esbuild": "^0.25.11",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.3.0",
    "postcss": "^8.4.47",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.14",
    "tsx": "^4.19.1",
    "typescript": "5.6.3",
    "typescript-eslint": "^8.40.0",
    "vite": "^7.1.10",
    "vite-plugin-glsl": "^1.3.1",
    "zod": "^3.23.8",
    "zod-validation-error": "^3.4.0"
  },
  "overrides": {
    "esbuild": "^0.25.11"
  },
  "build": {
    "appId": "com.galagagame.app",
    "productName": "ギャラガ風シューティングゲーム",
    "directories": {
      "output": "electron-dist"
    },
    "files": [
      "electron-main.js",
      "preload.js",
      "galaga-game.html",
      "game.js",
      "game.css",
      "generated-icon.png"
    ],
    "mac": {
      "icon": "generated-icon.png",
      "category": "public.app-category.games"
    },
    "win": {
      "icon": "generated-icon.png",
      "target": "nsis"
    },
    "linux": {
      "icon": "generated-icon.png",
      "category": "Game",
      "target": "AppImage"
    }
  }
}
